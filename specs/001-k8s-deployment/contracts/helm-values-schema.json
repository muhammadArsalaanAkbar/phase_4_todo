{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://todo-chatbot/helm-values-schema.json",
  "title": "Todo Chatbot Helm Values Schema",
  "description": "JSON Schema for validating Helm values files",
  "type": "object",
  "properties": {
    "replicaCount": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10,
      "default": 1,
      "description": "Number of pod replicas"
    },
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "description": "Container image repository"
        },
        "tag": {
          "type": "string",
          "pattern": "^(v[0-9]+\\.[0-9]+\\.[0-9]+|dev-[a-f0-9]+|sha256:[a-f0-9]+)$",
          "description": "Image tag (semver, dev-sha, or digest)"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"],
          "default": "IfNotPresent"
        }
      },
      "required": ["repository", "tag"]
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
          "default": "ClusterIP"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        }
      },
      "required": ["port"]
    },
    "resources": {
      "type": "object",
      "properties": {
        "requests": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "pattern": "^[0-9]+m?$",
              "description": "CPU request (e.g., 100m, 1)"
            },
            "memory": {
              "type": "string",
              "pattern": "^[0-9]+(Mi|Gi)$",
              "description": "Memory request (e.g., 128Mi, 1Gi)"
            }
          },
          "required": ["cpu", "memory"]
        },
        "limits": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "pattern": "^[0-9]+m?$"
            },
            "memory": {
              "type": "string",
              "pattern": "^[0-9]+(Mi|Gi)$"
            }
          },
          "required": ["cpu", "memory"]
        }
      },
      "required": ["requests", "limits"]
    },
    "probes": {
      "type": "object",
      "properties": {
        "liveness": {
          "$ref": "#/$defs/probe"
        },
        "readiness": {
          "$ref": "#/$defs/probe"
        },
        "startup": {
          "$ref": "#/$defs/probe"
        }
      }
    },
    "autoscaling": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "minReplicas": {
          "type": "integer",
          "minimum": 1
        },
        "maxReplicas": {
          "type": "integer",
          "maximum": 10
        },
        "targetCPUUtilizationPercentage": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100
        }
      }
    },
    "networkPolicy": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "secrets": {
      "type": "object",
      "properties": {
        "existingSecret": {
          "type": "string",
          "description": "Name of existing secret (never include values)"
        }
      }
    },
    "config": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "description": "Non-sensitive configuration values"
    }
  },
  "required": ["image", "service", "resources"],
  "$defs": {
    "probe": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string",
          "pattern": "^/"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        },
        "initialDelaySeconds": {
          "type": "integer",
          "minimum": 0
        },
        "periodSeconds": {
          "type": "integer",
          "minimum": 1
        },
        "failureThreshold": {
          "type": "integer",
          "minimum": 1
        }
      },
      "required": ["path", "port"]
    }
  }
}
