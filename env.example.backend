# Backend Environment Variables
# Copy to .env.local and fill in values

# =============================================================================
# REQUIRED SECRETS (must be provided via Kubernetes Secrets)
# =============================================================================

# Neon PostgreSQL connection string
# Format: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require

# OpenAI API key for AI chatbot features
OPENAI_API_KEY=sk-...

# JWT secret for authentication tokens (min 32 characters)
JWT_SECRET=your-secure-jwt-secret-min-32-chars

# =============================================================================
# PUBLIC CONFIGURATION (safe to commit via ConfigMap)
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://todo.local,http://localhost:3000

# =============================================================================
# RUNTIME CONFIGURATION (injected by Kubernetes)
# =============================================================================

# These are automatically set by Kubernetes Downward API
# POD_NAME - current pod name
# POD_IP - current pod IP address
# POD_NAMESPACE - current namespace
